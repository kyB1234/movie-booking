<!-- Email input -->
<div class="form-outline mb-4">
    <label class="form-label" for="email" style="color:#000000">Email address</label>
    <input type="email" id="email" required name="email" class="form-control form-control-lg"/>
</div>

<!-- Password input -->
<div class="form-outline mb-3">
    <label class="form-label" for="password" style="color:#000000">Password</label>
    <input type="password" id="password" required name="password" class="form-control form-control-lg"/>
</div>


<div class="text-center text-lg-start mt-4 pt-2">
    <button type="submit" class="btn btn-lg">Login
    </button>
</div>
